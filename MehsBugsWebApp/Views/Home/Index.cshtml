
@{
    ViewBag.Title = "AB :: MEHS";
    Layout = "~/Views/shared/_LayoutLog.cshtml";
}

<div class="row">
    <div class="page-header">
        <h1>Inicia sesión <small>AB:Mauro Etzael Henaro Sánchez</small></h1>
    </div>
</div>
<br />
<form action="/home/validate" method="post">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12 col-xs-12">
                            <i class="fa fa-user-circle-o" style="color:black;"></i><input type="text" id="txtUser" name="UserName" class="input-search-inverse" placeholder="usuario..." required autofocus />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12 col-xs-12">
                            <i class="fa fa-lock" style="color:black;"></i> <input type="password" id="txtPwd" name="UserPassword" class="input-search-inverse" placeholder="contraseña..." required />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-12 col-xs-12">
                            <button type="submit" class="btn btn-info btn-block"><i class="fa fa-share-square"></i> ingresar...</button>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @if (ViewBag.MsgLogin != null)
                            {
                                <div class="alert alert-danger">
                                    <span>@ViewBag.MsgLogin</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

